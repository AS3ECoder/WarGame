<?xml version="1.0" encoding="utf-8"?>
<extension:ExTabContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:extension="editor.extension.*" width="100%" height="100%">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import editor.extension.vo.TreeNode;
			
			import lib.avatarkit.AvatarNav;
			
			import mx.events.ResizeEvent;
			private var _data:TreeNode = null;
			private var container:ExSpriteContainer = null;
			private var avatar:AvatarNav = null;
			override public function set content(value:Object):void
			{
				_data = value as TreeNode;
			}
			
			override protected function onShow():void
			{
				container = new ExSpriteContainer();
				container.percentWidth = 100;
				container.percentHeight = 100;
				contentScroller.addElement(container);
				super.onShow();
			}
			
			override protected function onSizeChange():void
			{
				if(avatar)
				{
					avatar.x = width >> 1;
					avatar.y = (height >> 1) + avatar.height;
				}
			}
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%" id="contentScroller">
		
	</s:Scroller>
</extension:ExTabContent>
