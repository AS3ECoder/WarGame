<?xml version="1.0" encoding="utf-8"?>
<containers:SuperTabNavigator xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" tabWidth="100" change="onTabChanged(event)" xmlns:containers="flexlib.containers.*">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Metadata>
		[Event(name="onTabChanged", type="editor.extension.ExEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.IndexChangedEvent;
			private var _itemClass:Class = null;
			public function set itemClass(value:Class):void
			{
				_itemClass = value;
			}
			
			private var tabs:Vector.<ExTabContent> = new Vector.<ExTabContent>();  
			
			public function appendTab(title:String,content:Object):void
			{
				if(!checkExists(title))
				{
					var tab:ExTabContent = null;
					if(_itemClass)
					{
						tab = new _itemClass();
					}
					else
					{
						tab = new ExTabContent();
					}
					if(tab)
					{
						tab.label = title;
					}
					
					tab.content = content;
					tabs.push(tab);
					addChild(tab);
				}
				
			}
			
			protected function onTabChanged(event:IndexChangedEvent):void
			{
				debug("change tab[" + event.newIndex);
				var notify:ExEvent = new ExEvent(ExEvent.UI_TAB_CHANGE);
				notify.params = tabs[event.newIndex];
				dispatchEvent(notify);
			}
			
			private function checkExists(title:String):Boolean
			{
				for each(var tab:ExTabContent in tabs)
				{
					if(tab.label == title)
					{
						return true;
					}
				}
				return false;
			}
			
		]]>
	</fx:Script>
</containers:SuperTabNavigator>
